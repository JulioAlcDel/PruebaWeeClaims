@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row">
        <div class="d-none d-sm d-md-block col-6" id="imgMain">
            <img src="~/imagenWeeClaims.png" width="100%"/>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-6 ">

            <h1 class="text-primary mt-5">Registro Persona</h1>
            <form id="registerForm">
                <div class="form-group mt-4">
                    <input type="text" class="form-control" id="compania" name="compania" placeholder="Nombre de la Compañia" required />
                </div>
                <div class="form-group mt-4">
                    <input type="text" class="form-control" id="contacto" name="contacto" placeholder="Nombre de la persona para contacto" required />
                </div>
                <div class="form-group mt-4">
                    <input type="text" class="form-control" id="email" name="email" placeholder="Correo electrónico" required />
                </div>
                <div class="form-group mt-4">
                    <input type="text" class="form-control" id="telefono" name="telefono" placeholder="Teléfono" required />
                </div>
                <div class="form-check mt-4">
                    <input type="checkbox" class="form-check-input" id="terminos" name="terminos" required />
                    <label>He leído y acepto el <a href="#">Aviso de Privacidad/Términos y condiciones</a></label>
                </div>
                <br />
                <div class="d-flex justify-content-center">
                    <button type="button" class="btn btn-primary" id="guardarContacto">Continuar</button>
                </div>

            </form>
        </div>

    </div>
</div>
<div class="modal fade" id="modalSuccess" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabel">Información almacenada</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Cerrar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h2>Datos guardados correctamente</h2>
                <strong>Nombre de la compañia: </strong><span id="textCompania"></span> <br />
                <strong>Nombre del Contacto: </strong><span id="textContacto"></span><br />
                <strong>Email: </strong><span id="textEmail"></span><br />
                <strong>Teléfono: </strong><span id="textTelefono"></span><br />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="modalError" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabel">Error</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Cerrar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <strong> Error:  </strong><span id="textError"></span>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>

</div>